if {[string compare test [info procs test]] == 1} then { 
    source $TYCHO/kernel/test/testDefs.tcl
} {}

# Uncomment this to get a full report, or set in your Tcl shell window.
# set VERBOSE 1

# Set the following to avoid endless calls to exit.
set reallyExit 0

######################################################################
#### setup
# Create a hierarchical universe x with galaxy x.y

test remove.0 {create a test universe} {
    namespace pitcl {
        defgalaxy y {
            addBlock z Ramp
            galaxyPort out z.output
        }
        addUniverse x
        addBlock a y
        addBlock b Ramp
        addBlock c Add
        addBlock d XMgraph
        addBlock e y
        connect a.out c.input
        connect b.output c.input
        connect c.output d.input
    }
} {}

######################################################################
#### remove

test remove.1 {remove a simple star} {
    ::pitcl::curgalaxy .x
    ::pitcl::remove b
    ::pitcl::blocks
} {a c d e}

test remove.2 {remove a galaxy by relative name} {
    ::pitcl::curgalaxy .x
    ::pitcl::remove a
    ::pitcl::blocks .x
} {c d e}

test remove.3 {remove a galaxy by absolute name} {
    ::pitcl::curgalaxy .main
    ::pitcl::remove .x.e
    ::pitcl::blocks .x
} {c d}

set univlist [::pitcl::univlist]
set loc [lsearch -exact $univlist .x]
set newunivlist [lreplace $univlist $loc $loc]
test remove.4 {remove a universe} {
    ::pitcl::curgalaxy .x
    ::pitcl::remove .x
    list [::pitcl::univlist] [::pitcl::curgalaxy]
} [list $newunivlist .main]

test remove.5 {attempt to remove main} {
    ::pitcl::addUniverse .main
    ::pitcl::addBlock a Ramp
    ::pitcl::remove .main
    ::pitcl::blocks .main
} {}

doneTests
