#######################################################################
#### ControlSubpanel
# A superclass for control panels that can be packed into
# in instance of ControlPanel. By default, this class
# assume that its immediate parent is an instance of
# ControlPanel -- if not, then set the *-controlpanel*
# option when creating the widget.
#
class ::tycho::ControlSubpanel {
    inherit ::tycho::TWidget

    constructor {args} {}
    destructor {}
    
    ###################################################################
    ####                            options                        ####

    # The name of the control widget
    itk_option define -controlpanel controlPanel ControlPanel ""

    ###################################################################
    ####                         public methods                    ####

    # Request the widget to connect its controls
    method requestConnect {}

    ###################################################################
    ####                   protected methods                       ####

    # Connect a widget to a control
    protected method connect {widget control}
}

#######################################################################
#### constructor
#
body ::tycho::ControlSubpanel::constructor {args} {
    # Initialize options
    eval itk_initialize $args

    # If there's no control panel set, set it to the parent
    if { $itk_option(-controlpanel) == "" } {
        configure -controlpanel [winfo parent $this]
    }
}


    ###################################################################
    ###################################################################
    ####                      public methods                       ####

#######################################################################
#### requestConnect
#
# Connect all controls to the control panel. Subclasses must
# override and include calls to the connect{} protected method.
#
body ::tycho::ControlSubpanel::requestConnect {} {
    ;# By default, do nothing
}

    ###################################################################
    ###################################################################
    ####                      protected methods                    ####

#######################################################################
#### connect
#
# Connect a widget to a control in the main control panel
#
body ::tycho::ControlSubpanel::connect {widget control} {
    $itk_option(-controlpanel) connect $widget $control
}
