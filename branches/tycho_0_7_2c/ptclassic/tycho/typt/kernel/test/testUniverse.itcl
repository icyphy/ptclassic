if {[string compare test [info procs test]] == 1} then { 
    source $TYCHO/kernel/test/testDefs.tcl
} {}

# Uncomment this to get a full report, or set in your Tcl shell window.
# set VERBOSE 1

# Set the following to avoid endless calls to exit.
set reallyExit 0

######################################################################
#### constructor

test Universe::constructor.1 {create an empty universe} {
    catch {delete object .a}
    ::ptolemy::Universe .a {}
} {.a}

test Universe::constructor.2 {create a populated universe} {
    catch {delete object .b}
    ::ptolemy::Universe .b {
        addBlock x Ramp
        addBlock y Xgraph
        connect .b.x.output .b.y.input
    }
    .b getBlocks
} {.b.x .b.y}

test Universe::constructor.3 {create an empty universe, then populate it} {
    catch {delete object .b}
    ::ptolemy::Universe .b {}
    .b addBlock x Ramp
    .b addBlock y Xgraph
    .b connect .b.x.output .b.y.input
    .b getBlocks
} {.b.x .b.y}
