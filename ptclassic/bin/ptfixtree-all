#! /bin/sh
# Version: $Id$
# Check that all the facets are use $PTOLEMY
PTOLEMY=${PTOLEMY:-~/ptolemy}
PTARCH=`$PTOLEMY/bin/ptarch`
tclscript=$PTOLEMY/bin/ptfixtree.tcl
ptolemytcl=$PTOLEMY/tcltk/tcl.$PTARCH/bin/tclsh
echo 'expect a message about: invalid command name "destroy"'
exec $ptolemytcl $tclscript \
	-within '$PTOLEMY' \
	$PTOLEMY/src/domains/*/icons/*.pal \
	$PTOLEMY/src/domains/*/*/icons/*.pal \
	$PTOLEMY/demo/*.pal \
	$PTOLEMY/src/domains/*/demo/*.pal \
	$PTOLEMY/src/domains/*/*/demo/*.pal
