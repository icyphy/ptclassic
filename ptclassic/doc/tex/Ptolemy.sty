% Font changing commands for index page numbers.
\newcommand{\ixDef}[1]{{#1}}
\newcommand{\ixRef}[1]{{#1}}
\newcommand{\ixEx}[1]{{#1}}
\newcommand{\ixStarDef}[1]{{#1}}
\newcommand{\ixStarRef}[1]{{#1}}
\newcommand{\ixStarEx}[1]{{#1}}

\newcommand{\indexDef}[1]{\index{#1|ixDef}}
\newcommand{\indexRef}[1]{\index{#1|ixRef}}
\newcommand{\indexEx}[1]{\index{#1|ixEx}}

\newcommand{\indexStarDef}[1]{\index{#1|ixStarDef}}
\newcommand{\indexStarRef}[1]{\index{#1|ixStarRef}}
\newcommand{\indexStarEx}[1]{\index{#1|ixStarEx}}

%
% A list environment for making index entries.
% Different item types will use \@indexKey differently.
%
\newcommand{\@indexKey}{}
\newenvironment{indexlist}[1]%
    {\begin{description}\renewcommand{\@indexKey}{#1}}%
    {\end{description}}

% A list item for functions.
% \@indexKey is used as an optional suffix.
% \function{type}{name}{args}
\newcommand{\function}[3]{\item[\code{#1 #2}\indexDef{#2\@indexKey}]
    \code{#3}\hspace*{\fill}\\}

% A list item for variables.
% \@indexKey is used as an optional suffix.
% \variable{type}{name}
\newcommand{\variable}[2]{\item[\code{#1 #2}\indexDef{#2\@indexKey}]
    \hspace*{\fill}\\}

% A list item for C++ class member functions (methods).
% \@indexKey is used as the class name.
% \method{type}{name}{args}
\newcommand{\method}[3]{\item[\code{#1 #2}\indexDef{#2!\@indexKey\space method}\indexDef{\@indexKey\space class!#2 method}]
    \code{#3}\hspace*{\fill}\\}

% A list item for C++ class data members.
% \@indexKey is used as the class name.
% \member{type}{name}
\newcommand{\member}[2]{\item[\code{#1 #2}\indexDef{#2!\@indexKey\space member}\indexDef{\@indexKey\space class!#2 member}]
    \hspace*{\fill}\\}

% A list item for blocks (stars, galaxies, universes).
% \@indexKey is used as an optional suffix.
% \block{name}
\newcommand{\block}[1]{\item[\code{#1}\indexStarDef{#1\@indexKey}]}

% A list item for states.
% \@indexKey is used as an optional suffix.
% \state{type}{name}{default}
\newcommand{\state}[3]{\item[\var{#2}\indexDef{#2\@indexKey}](\code{#1})
    Default = \samp{#3}\hspace*{\fill}\\}

% A list item for ports.
% \@indexKey is used as an optional suffix.
% \port{type}{name}
\newcommand{\port}[2]{\item[\var{#2}\indexDef{#2\@indexKey}]
    (\code{#1})\hspace*{\fill}\\}
