# Root of Ptolemy directory
ROOT=../../../..
# True source directory
VPATH = $(ROOT)/src/domains/cg/kernel

# get configuration info
CONFIG=$(ROOT)/config-$(ARCH).mk
include $(CONFIG)

# SDF directory
SDFDIR=$(ROOT)/src/domains/sdf/kernel

# Rule for compiling with g++
.SUFFIXES: .cc
.cc.o:
	$(GNU) $(GPPFLAGS) -I$(KERNDIR) -I$(SDFDIR) -c $<

# Library name
LIB=libcg.a

# .h files with matching cc files
H_WITH_MATCH= \
AsmConnect.h \
AsmForkNode.h \
AsmGeodesic.h \
AsmStar.h \
AsmTarget.h \
BaseMultiTarget.h \
BaseCTarget.h \
CGConnect.h \
CGDisplay.h \
CGGeodesic.h \
CGStar.h \
CGTarget.h \
CGWormhole.h \
IntArray.h \
MReq.h \
MemMap.h \
ProcMemory.h \
Profile.h

# Header files
HDRS= $(H_WITH_MATCH) CGWormConnect.h

# Library objects
OBJS= $(H_WITH_MATCH:.h=.o) CGDomain.o AsmTargetInit.o

# Library sources
SRCS= $(OBJS:.o=.cc)

all:	makefile $(LIB)

$(LIB):	$(OBJS)
	rm -f $(LIB)
	ar cq $(LIB) $(OBJS)
	ranlib $(LIB)

# "make install" puts things in the official place
install:	makefile $(LIBDIR)/$(LIB)

$(LIBDIR)/$(LIB):	$(LIB)
		rm -f $(LIBDIR)/$(LIB)
		cp $(LIB) $(LIBDIR)
		ranlib $(LIBDIR)/$(LIB)

# "make clean" removes .o files and other cruft
clean:
		rm -f *.o core *~ *.bak *#

# "make sources" will do SCCS get on anything where SCCS file is newer.
sources:	$(SRCS) $(HDRS) make.template

depend:
		cd $(VPATH); \
		$(DEPEND) -I$(KERNDIR) -I$(SDFDIR) $(SRCS)|\
			cat make.template - > makefile.n;\
		mv -f makefile.n makefile

makefile:	make.template
		cd $(VPATH); make -f make.template sources depend
		if [ ! -f makefile ]; then ln -s $(VPATH)/makefile makefile; fi
		@echo makefile remade -- you must rerun make.
		exit 1

