# Code generation targets

# Root of Ptolemy directory
ROOT=../../../../..
# True source directory
VPATH = $(ROOT)/src/domains/cgc/vis/targets

# get configuration info
CONFIG=$(ROOT)/mk/config-$(PTARCH).mk
include $(CONFIG)

SDFKERNEL = $(ROOT)/src/domains/sdf/kernel
CGKERNEL = $(ROOT)/src/domains/cg/kernel
CGCKERNEL = $(ROOT)/src/domains/cgc/kernel

INCL= -I$(CGCKERNEL) -I$(CGKERNEL) -I$(SDFKERNEL) -I$(KERNDIR)

SRCS =	CGCVISSimTarget.cc

HDRS=$(SRCS:.cc=.h)

OBJS = $(SRCS:.cc=.o)

PTLIB=none	# required by common.mk

all:		makefile $(OBJS)
# "make install" puts things in the official place
install:	all
		@echo Installation complete.

# include common definitions, rules
include $(ROOT)/mk/common.mk

