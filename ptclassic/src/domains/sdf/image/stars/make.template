# Makefile for Ptolemy SDF image and network stars
# $Id$
#
# If this file's name is "make.template" and there is no makefile in
# this directory, do
#	cp make.template makefile
#	chmod +w makefile
#	make depend
# This will add the dependencies to the makefile.

ROOT = ../../../../..
VPATH = $(ROOT)/src/domains/sdf/image/stars

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

# SDFDIR is the directory containing SDF domain support
SDFDIR = $(ROOT)/src/domains/sdf/kernel
IMAGE = $(ROOT)/src/domains/sdf/image/kernel
INCL = -I$(SDFDIR) -I$(KERNDIR) -I$(IMAGE)

# Library name
LIB=libsdfimagestars.a

# Where star doc files go
STARDOCDIR = ../../doc/stars

# source files for all stars, using preprocessor
PL_SRCS= \
 SDFAddMotionVecs.pl \
 SDFDCTImage.pl \
 SDFDCTImageCode.pl \
 SDFDCTImageCodeInv.pl \
 SDFDCTImageInv.pl \
 SDFDiffImage.pl \
 SDFDisplayImage.pl \
 SDFDisplayRGB.pl \
 SDFDisplayVideo.pl \
 SDFDPCMImage.pl \
 SDFDPCMImageInv.pl \
 SDFImageToMx.pl \
 SDFImageToPix.pl \
 SDFMakeSeqATMCell.pl \
 SDFMedianImage.pl \
 SDFMotionCmp.pl \
 SDFMotionCmpInv.pl \
 SDFMxToImage.pl \
 SDFPixToImage.pl \
 SDFReadImage.pl \
 SDFReadRGB.pl \
 SDFRGBToYUV.pl \
 SDFRunLenImage.pl \
 SDFRunLenImageInv.pl \
 SDFYUVToRGB.pl \
 SDFZigZagImage.pl \
 SDFZigZagImageInv.pl

# The .cc files
SRCS=$(PL_SRCS:.pl=.cc)

# object files for all stars
OBJS= $(SRCS:.cc=.o)

# header files for all stars
HDRS= $(SRCS:.cc=.h)

STAR_MK=sdfimagestars
DOMAIN=SDF_IMAGE
DOMAIN_2=SDF
EXTRA_SRCS=$(STAR_MK).c $(PL_SRCS)

all:		makefile stars_all

install:	stars_install


# include common definitions, rules
include $(ROOT)/mk/common.mk


