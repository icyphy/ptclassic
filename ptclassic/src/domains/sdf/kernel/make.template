# Root of Ptolemy directory
ROOT=../../../..
# True source directory
VPATH = $(ROOT)/src/domains/sdf/kernel

# get configuration info
CONFIG=$(ROOT)/config-$(ARCH).mk
include $(CONFIG)

# Rule for compiling C++ programs
.SUFFIXES: .cc
.cc.o:
	$(GNU) $(GPPFLAGS) -I$(KERNDIR) -c $<

# Library name
LIB=libsdf.a

# Library sources
SRCS= \
 SDFConnect.cc SDFScheduler.cc SDFStar.cc SDFWormhole.cc SDFWormConnect.cc \
 SDFDomain.cc

# Header files
HDRS= SDFConnect.h SDFGeodesic.h SDFScheduler.h SDFStar.h SDFUniverse.h \
 SDFWormhole.h SDFWormConnect.h

# Library objects
OBJS= SDFConnect.o SDFScheduler.o SDFStar.o SDFWormhole.o SDFWormConnect.o \
 SDFDomain.o

all:	makefile $(LIB)

$(LIB):	$(OBJS)
	rm -f $(LIB)
	ar cq $(LIB) $(OBJS)
	ranlib $(LIB)

# "make install" puts things in the official place
install:	makefile $(LIBDIR)/$(LIB)

$(LIBDIR)/$(LIB):	$(LIB)
		rm -f $(LIBDIR)/$(LIB)
		cp $(LIB) $(LIBDIR)
		ranlib $(LIBDIR)/$(LIB)

# "make clean" removes .o files and other cruft
clean:
		rm -f *.o core *~ *.bak *#

# "make sources" will do SCCS get on anything where SCCS file is newer.
sources:	$(SRCS) $(HDRS) make.template

depend:
		cd $(VPATH); \
		g++ -MM -I$(KERNDIR) $(SRCS)|cat make.template - > makefile.n;\
		mv -f makefile.n makefile

makefile:	make.template
		cd $(VPATH); make -f make.template sources depend
		if [ ! -f makefile ]; then ln -s $(VPATH)/makefile makefile; fi
		@echo makefile remade -- you must rerun make.
		exit 1

# Commands to make some sources from templates

SDFDomain.cc :	$(KERNDIR)/XDomain.ccP
	cd $(VPATH); rm -f SDFDomain.cc; \
	sed 's/<T>/SDF/g' $(KERNDIR)/XDomain.ccP > SDFDomain.cc

