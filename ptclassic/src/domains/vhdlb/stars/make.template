ROOT = ../../../..
VPATH = $(ROOT)/src/domains/vhdlb/stars

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

# VHDLBDIR is the directory containing VHDLB domain support
VHDLBDIR = $(ROOT)/src/domains/vhdlb/kernel
CGDIR = $(ROOT)/src/domains/cg/kernel
SDFDIR = $(ROOT)/src/domains/sdf/kernel

INCL = -I$(VHDLBDIR) -I$(CGDIR) -I$(SDFDIR) -I$(KERNDIR)

# stars library
LIB=libvhdlbstars.a

# source files for all stars, using preprocessor
PL_SRCS=\
 VHDLBDC.pl \
 VHDLBBlackHole.pl \
 VHDLBFork.pl \
 VHDLBClock.pl \
 VHDLBRegister.pl \
 VHDLBPar2Ser.pl \
 VHDLBSer2Par.pl \
 VHDLBxx73.pl \
 VHDLBxx74.pl \
 VHDLBAnd.pl \
 VHDLBAnd3.pl \
 VHDLBNand.pl \
 VHDLBNand3.pl \
 VHDLBOr.pl \
 VHDLBOr3.pl \
 VHDLBNor.pl \
 VHDLBNor3.pl \
 VHDLBXor.pl \
 VHDLBXor3.pl \
 VHDLBNot.pl \

# The .cc files
SRCS=$(PL_SRCS:.pl=.cc)

# object files for all stars
OBJS= $(SRCS:.cc=.o)

# header files for all stars
HDRS= $(SRCS:.cc=.h)

STAR_MK=vhdlbstars
DOMAIN=VHDLB
EXTRA_SRCS=vhdlbstars.mk $(STAR_MK).c $(PL_SRCS)

all:		makefile stars_all

# nothing to install -- use it where it lies
install:	stars_install

# include common definitions, rules
include $(ROOT)/mk/common.mk

