# $Id$
#
# Ptolemy program Makefile.
#

ARCH          = sun4

PTOLEMY       = /usr/users/ptolemy

VPATH         = ../../../src/filters/wfir

PROGRAM	      = wfir

OBJS	      = wfir.o

SRCS	      = wfir.f

HDRS	      =

EXTHDRS	      =

DEST	      = $(PTOLEMY)/bin.$(ARCH)

FFLAGS	      = -O

LDFLAGS	      =

LIBS	      = /usr/lib/libm.a

FC	      = f77

LINKER	      = $(FC)

MAKEFILE      = Makefile

PRINT	      = pr

all:		$(PROGRAM)

$(PROGRAM):     $(OBJS) $(LIBS)
		$(LINKER) $(LDFLAGS) $(OBJS) $(LIBS) -o $(PROGRAM)

clean:;		rm -f $(OBJS) make.out makelint.out gmon.out core $(PROGRAM)

depend:;	@mkmf -f $(MAKEFILE) PROGRAM=$(PROGRAM) DEST=$(DEST)

install:	$(PROGRAM)
		mv -f $(PROGRAM) $(DEST)/$(PROGRAM)

check:;		sccs check; sccs prt -y *.f > /dev/null

print:;		$(PRINT) $(HDRS) $(SRCS)

program:        $(PROGRAM)

sources:	$(SRCS)

tags:           $(HDRS) $(SRCS); @ctags $(HDRS) $(SRCS)

update:		$(DEST)/$(PROGRAM)
###
