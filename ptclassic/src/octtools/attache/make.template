# root of source tree
ROOT	      = ../../..
# VPATH points to the real source directory
VPATH         = $(ROOT)/src/octtools/attache

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

HDRS		= attache.h \
		edit.h \
		internal.h \
		io.h \
		obj.h

LIBCSRCS	= attache.c \
		command.c \
		io.c \
		main.c \
		obj.c \
		template.c \
		update.c 

SRCS = $(LIBCSRCS)

OBJS = $(LIBCSRCS:.c=.o)

C_INCL= -I../include

all::	 makefile attache

LIBS	= -L$(OCTLIBDIR) -loh$(DBGFLAG) -lvov$(DBGFLAG) \
	-loptions$(DBGFLAG) -loct$(DBGFLAG) -ltr$(DBGFLAG) \
	-lutility$(DBGFLAG) -lst$(DBGFLAG) $(OCTTOOLS_MM_LIB) \
	-lerrtrap$(DBGFLAG) -luprintf$(DBGFLAG) -lport$(DBGFLAG)   

attache:	$(OBJS)
	$(LINKER) $(LINKFLAGS) $(OBJS) \
		-o attache $(LIBS) -lcurses -ltermlib -lm 

DESTBIN = $(OCTTOOLS)/bin.$(ARCH)/attache

$(DESTBIN):	attache
		@echo Installing attache
		rm -f $(DESTBIN)
		ln attache $(DESTBIN)

install: makefile $(DESTBIN) $(BINDIR)/attache

$(BINDIR)/attache:
	(cd $(BINDIR); ln -s ../octtools/bin.$(ARCH)/attache .)

# "make sources" will do SCCS get on anything where SCCS file is newer.
sources:	

# Some versions of make require us to set LIB if we are going to
# include common.mk
LIB=none

# include common definitions, rules
include $(ROOT)/mk/common.mk

