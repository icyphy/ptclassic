######################################################################
#### setup
# Create a hierarchical universe.
# Naming convention: Galaxy masters: am, bm, ...,
# Galaxy instances: a,b,c,...,  Stars: x,y,z.

test connected.0 {create a test universe} {
    namespace ::pitcl {
        defgalaxy cm {
            addBlock x Ramp
            galaxyPort o x.output
        }
        defgalaxy bm {
            addBlock c cm
            galaxyPort o bm.c.o
        }
        defgalaxy em {
            addBlock y XMgraph
            galaxyPort i y.input
        }
        defgalaxy dm {
            addBlock e em
            galaxyPort i e.i
        }
        addUniverse a
        addBlock b bm
        addBlock d dm
        connect b.o d.i
        addBlock z Ramp
        connect z.output d.i
    }
} {}

