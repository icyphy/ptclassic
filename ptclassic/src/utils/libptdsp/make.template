# root of source tree
ROOT	      = ../../..
# VPATH points to the real source directory
VPATH         = $(ROOT)/src/utils/libcephes

# get configuration info
CONFIG=$(ROOT)/mk/config-$(PTARCH).mk
include $(CONFIG)

C_INCL = $(PTCOMPAT_INCSPEC)

HDRS = cephes.h

LIBCSRCS = chbevl.c i0.c

SRCS = $(LIBCSRCS)

OBJS = $(LIBCSRCS:.c=.o)

LIB = libcephes.$(LIBSUFFIX)

# include common definitions, rules
include $(ROOT)/mk/common.mk

all: makefile $(LIB)

install: makefile $(LIBDIR)/$(LIB)

lint:	$(LIBCSRCS)
	lint -u $(INCL) $(LIBCSRCS) > lint

