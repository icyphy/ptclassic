}
#set VERBOSE 1


#######################################################################
#### Define a proc to create a polygon
proc _polygon {} {
    global p
    _clean
    set p [.s create polygon 50 50 150 50 150 150 100 100 50 150 50 50 \
	    -width 2 -fill "" -outline blue \
	    -tags foo]
}

