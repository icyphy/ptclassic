####                        public procs                             ####

#####################################################################
#### openResource
body ::tycho::Resource::openResource {path} {
    if { [regexp {$http://} $path] } {
	set new [::tycho::HTTPFile [::tycho::autoName httpfile]]
    } else {
	set new [::tycho::LocalFile [::tycho::autoName localfile]]
    }
    $new open $path 
    return $new
}

