test Exec-1.1 {run make} {
    catch {destroy .exec}
    catch {delete object .exec}
    ::tycho::Monitor .exec -command {make test_exec_msg} -dir [pwd] \
            -autostart 1
    #::tycho::Monitor .exec -command {ls -al} -dir [pwd] -autostart 1
    .exec centerOnScreen
    sleep [expr {$duration / 1000}]
    #after $longDuration .exec invoke cancel
    puts "about to do getHistory"
    flush stdout
    set status [.exec getStatusWait]
    set history [.exec getHistory]
    regsub -all "make\[^\n\]+\n" $history "" results
    list $results
} {{This message is used to test the Exec class


