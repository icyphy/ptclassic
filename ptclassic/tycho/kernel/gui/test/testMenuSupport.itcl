_stdmenu
test MenuSupport-unpost-1 {Unpost top-level menu} {
    .m unpost
    list \
            [winfo ismapped .m.top] \
            [winfo ismapped .m.top.menucascade-entry] \
            [winfo ismapped .m.top.menucascade-entry.menucascade-entry-3]
} {0 0 0}

test MenuSupport-post-1 {Post top-level menu} {
    .m post top
    list \
            [winfo ismapped .m.top] \
            [winfo ismapped .m.top.menucascade-entry] \
            [winfo ismapped .m.top.menucascade-entry.menucascade-entry-3]
} {1 0 0}

