############################################################################
# entrycget{}, entryconfigure{}
#
_stdmenu
set i 0
foreach {option value} {
    accelerator <Push-me>
    command {Call me!}
    label {I am Solomon}
    underline 5
    state disabled
} {
    test MenuSupport-entryconfigure-$i "Configure and get option $option" {
        update
        after 250
        incr i
        .m entryconfigure command-entry -$option $value
        .m entrycget command-entry -$option
    } $value
}

