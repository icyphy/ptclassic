#####################################################################
#### cachefile
# Get a cached copy of the contents of the file. This is provided
# to work around Tcl's lack of binary data handling.
#
body ::tycho::ResourceHTTP::cachefile {} {
    set url [path]
    while { [::info exists _forwarding($url)] } {
	set url $_forwarding($url)
    }
    if ![::info exists _cachefile($url)] {
	if ![isopen] {
	    open "r"
	    read
	    close
	} else {
	    read
	}
    }
    return $_cachefile($url)
}

#####################################################################
#### close
body ::tycho::ResourceHTTP::close {} {
    if !$fileIsOpen {
	openerror "File \"$this\" is not open (close)"
    }
    set fileIsOpen 0
    if { $fileid != "" } {
        ::close $fileid
        set fileid ""
    }
}

#####################################################################
#### eof
body ::tycho::ResourceHTTP::eof {} {
    if !$fileIsOpen {
	openerror "File \"$this\" is not open (eof)"
    }
    ::eof $fileid
}

#####################################################################
#### gets
body ::tycho::ResourceHTTP::gets {{varName {}}} {
    if !$fileIsOpen {
	openerror "File \"$this\" is not open (gets)"
    }
    if { $varName == "" } {
	::gets $fileid
    } else {
	upvar $varName v
	uplevel ::gets $fileid v
    }
}

#####################################################################
#### isopen
body ::tycho::ResourceHTTP::isopen {} {
    return $fileIsOpen
}

#####################################################################
#### open
# Open an HTTP file. If it's already been downloaded into
# a local temporary file, just use that file; otherwise
# download it into a temporary file and then download it.
#
body ::tycho::ResourceHTTP::open {{mode "r"}} {
    set url [path]

    if { $mode != "r" } {
	error "File $url is not writable"
    }
    if { ! [exists $url] } {
	error "File $url does not exist"
    }
    if { ! [httpcached $url] } {
	# Get it if not already
	httpget $url file
	httpwait
    }
    # Check again in case something went wrong
    if { ! [httpcached $url] } {
	error "File $url is not accessible"
    }
    # Go through forwarding locations
    while { [::info exists _forwarding($url)] } {
	set url $_forwarding($url)
    }
    # Open the cache file
    set fileid [::open $_cachefile($url) "r"]
    set fileIsOpen 1
}

#########################################################################
#### progress
# Get the current progress of a non-blocking read. Won't make sense
# if not called during a non-blocking read.
#
body ::tycho::ResourceHTTP::progress {} {
    if {$contentlength==0} {
        return 0
    }
    expr $contentloaded / $contentlength.0
}

