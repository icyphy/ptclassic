#####################################################################
#### contenttype
# Return the content type of the open file.
body ::tycho::ResourceHTTP::contenttype {url} {
    #return $contenttype
    set resource [new $url]
    $resource httpget $url header
    $resource httpwait
    set contenttype [$resource getcontenttype]
    ::delete object $resource

    return $contenttype
}

