#! /bin/sh
# Command-line program for the tycho.util.tydoc utility \
    exec itclsh "$0" "$@"

# $Id$
# Author: John Reekie

# If the TYDOC_LIBRARY variable is set, add it to the auto_path
if [info exists env(TYDOC_LIBRARY)] {
    if { [lsearch -exact $auto_path $env(TYDOC_LIBRARY)] }  {
	lappend auto_path $env(TYDOC_LIBRARY)
    }
}

# Require the tycho.util.tydoc package. If this fails, try with the
# TCL_PACKAGES variable.
set ok 0
if [catch {package require tycho.util.tydoc}] {
    if [info exists env(TCL_PACKAGES)] {
	if { [lsearch -exact $auto_path $env(TCL_PACKAGES)] == -1 }  {
	    lappend auto_path $env(TCL_PACKAGES)
	    if ![catch {package require tycho.util.tydoc}] {
		set ok 1
	    }
	}
    }
} else {
    set ok 1
}

# If that didn't work, try the TYCHO environment variable.
if !$ok {
    if [info exists env(TYCHO)] {
	if { [lsearch -exact $auto_path $env(TYCHO)] == -1 }  {
	    lappend auto_path $env(TYCHO)
	    if ![catch {package require tycho.util.tydoc}] {
		set ok 1
	    }
	}
    }
}
if !$ok {
    puts "Cannot find \"tycho.util.tydoc\". You can\n\
	    1. Install tycho.util.tydoc in a subdirectory of your Tcl library\n\
	    2. Install tycho.util.tydoc in the directory given by the TCL_PACKAGES \
	    variable.\n\
	    3. Set the TYDOC_LIBRARY variable to point to the \
	    tydoc directory\n\
	    4. Set the TYCHO variable to point to your \
	    Tycho installation\n"
    exit
}

# Print startup sig
puts "tycho.util.tydoc, version 2.0"

# Run the main procedure
eval tydoc $argv

# Done

