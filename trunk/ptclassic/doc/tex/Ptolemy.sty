\input{latexinfo.sty}

%
% Commands for listing authors and contributors of a chapter.
%
% Names should be listed one per line, separated by \\.
%
\def\Author#1{
    \noindent
    \makebox[1.5in][l]{\em Authors:}
    \parbox[t]{4in}{\em #1} \par
    \vspace{\baselineskip} }
\def\Contrib#1{
    \noindent
    \makebox[1.5in][l]{\em Other Contributors:}
    \parbox[t]{4in}{\em #1} \par
    \vspace{\baselineskip} }

%
% A list environment for making index entries.
% Different item types will use \@indexKey differently.
%
\newenvironment{indexlist}[1]%
    {\begin{description}\def\@indexKey{#1}}%
    {\end{description}}

% A list item for functions.
% \@indexKey is used as an optional suffix.
% \function{type}{name}{args}
\newcommand{\function}[3]{\item[\code{#1 #2}\fnindexbold{#2\@indexKey}]
    \code{#3}\hspace*{\fill}\\}

% A list item for variables.
% \@indexKey is used as an optional suffix.
% \variable{type}{name}
\newcommand{\variable}[2]{\item[\code{#1 #2}\vrindexbold{#2\@indexKey}]
    \hspace*{\fill}\\}

% A list item for C++ class member functions (methods).
% \@indexKey is used as the class name.
% \method{type}{name}{args}
\newcommand{\method}[3]{\item[\code{#1 #2}\fnindexbold{#2!\@indexKey\space method}\fnindexbold{\@indexKey\space class!#2 method}]
    \code{#3}\hspace*{\fill}\\}

% A list item for C++ class data members.
% \@indexKey is used as the class name.
% \member{type}{name}
\newcommand{\member}[2]{\item[\code{#1 #2}\vrindexbold{#2!\@indexKey\space member}\vrindexbold{\@indexKey\space class!#2 member}]
    \hspace*{\fill}\\}

% A list item for blocks (stars, galaxies, universes).
% \@indexKey is used as an optional suffix.
% \block{name}
\newcommand{\block}[1]{\item[\code{#1}\tpindexbold{#1\@indexKey}]}

% A list item for states.
% \@indexKey is used as an optional suffix.
% \state{type}{name}{default}
\newcommand{\state}[3]{\item[\var{#2}\vrindexbold{#2\@indexKey}](\code{#1})
    Default = \samp{#3}\hspace*{\fill}\\}

% A list item for ports.
% \@indexKey is used as an optional suffix.
% \port{type}{name}
\newcommand{\port}[2]{\item[\var{#2}\vrindexbold{#2\@indexKey}]
    (\code{#1})\hspace*{\fill}\\}
