#! /bin/csh
# pigiDebugRpc -- script for use with pigiDebug
# Important: if you want to use the PIGIRPC environment variable you must
# set it in your .cshrc (Vem runs this using rsh)
# Version identification:
# $Id$
# Copyright (c) 1990 The Regents of the University of California.
#                       All Rights Reserved.

if (! ($?PIGIRPC)) then
	setenv PIGIRPC ~ptolemy/obj.$ARCH/pigiRpc/pigiRpc
endif

cat > /tmp/rpc$$ <<EOF
break main
run $*
EOF
xterm -display unix:0 -title "pigiRpc debug window" -bg black -fg green \
	-e gdb $PIGIRPC -x /tmp/rpc$$ &

