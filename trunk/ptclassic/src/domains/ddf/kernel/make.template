# Root of Ptolemy directory
ROOT=../../../..
# True source directory
VPATH = $(ROOT)/src/domains/ddf/kernel

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

# SDF support directory
SDFDIR=$(ROOT)/src/domains/sdf/kernel

INCL = -I$(SDFDIR) -I$(KERNDIR)

# Library name
LIB=libddf.$(LIBSUFFIX)

# .h files with corresponding .cc files
HDRS = \
 Case.h \
 CaseScheduler.h \
 DDFPortHole.h \
 DDFScheduler.h \
 DDFStar.h \
 DDFTarget.h \
 DDFWormhole.h \
 DoWhile.h \
 DoWhileScheduler.h \
 DyConstruct.h \
 DyConScheduler.h \
 For.h \
 ForScheduler.h \
 Recur.h \
 RecurScheduler.h \
 defConstructs.h

# Library sources
SRCS= $(HDRS:.h=.cc) DDFDomain.cc DDFAutoWorm.cc

# Library objects
OBJS= $(SRCS:.cc=.o)

all:	makefile $(LIB)

# "make install" puts things in the official place
install:	makefile $(LIBDIR)/$(LIB)

# include common definitions, rules
include $(ROOT)/mk/common.mk

