ROOT = ../../../../..
VPATH = $(ROOT)/src/domains/de/tcltk/stars

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

# DEDIR is the directory containing DE domain support
DEDIR = $(ROOT)/src/domains/de/kernel
TCLDIR = $(ROOT)/tcl/include
PIGIDIR = $(ROOT)/src/pigilib
PTKLIB = $(ROOT)/src/ptklib
INCL = -I$(DEDIR) -I$(KERNDIR) -I$(PIGIDIR) -I$(PTKLIB) \
 -I$(TCL_INCDIR) -I$(TK_INCDIR) $(X11_INCSPEC)

# Library name
LIB=libdetclstars.a

# Where star doc files go
STARDOCDIR = ../../doc/stars

# source files for all stars, using preprocessor
PL_SRCS= \
 DETkBarGraph.pl

# DELMSTkPlot.pl \
# DELMSCxTkPlot.pl \
# DETkMeter.pl \
# DETclScript.pl \
# DETkShowValues.pl \
# DETkSlider.pl \
# DETkText.pl

# TCL_SRCS= \
#  tkMeter.tcl \
#  tkScript.tcl \
#  tkShowValues.tcl \
#  tkSlider.tcl \
#  tkText.tcl

# The .cc files
SRCS=$(PL_SRCS:.pl=.cc)

# object files for all stars
OBJS= $(SRCS:.cc=.o)

# header files for all stars
HDRS= $(SRCS:.cc=.h)

# extra source files: tcl/tk script files
SCRIPTS= 

STAR_MK=detclstars
DOMAIN=DE_TCL
DOMAIN_2=DE
EXTRA_SRCS=$(STAR_MK).mk $(STAR_MK).c $(PL_SRCS) $(SCRIPTS) $(TCL_SRCS)

all:		makefile stars_all

install:	stars_install


# include common definitions, rules
include $(ROOT)/mk/common.mk


