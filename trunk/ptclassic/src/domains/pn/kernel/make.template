ROOT=../../../..
# True source directory
VPATH=$(ROOT)/src/domains/mtdf/kernel

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

AWESIME=$(ROOT)/src/thread/Awesime/include.$(ARCH)
THREADDIR=$(ROOT)/src/thread/awe
SDFDIR=$(ROOT)/src/domains/sdf/kernel

INCL=-I$(KERNDIR) -I$(THREADDIR) -I$(SDFDIR) -I$(AWESIME)

# Library name
LIB=libmtdf.a

# Library sources
CC_WITH_H=\
	MTDFTarget.cc MTDFScheduler.cc MTDFStar.cc\
	MTDFWormhole.cc MTDFEventHorizon.cc\
	MTDFPortHole.cc MTDFGeodesic.cc MTDFForkNode.cc\
	MTDFThread.cc

SRCS=	$(CC_WITH_H)\
	MTDFDomain.cc

# Header files
HDRS=	$(CC_WITH_H:.cc=.h)\
	MTDFUniverse.h \
	MTDFMonitor.h \
	MTDFCondition.h

# Library objects
OBJS = $(SRCS:.cc=.o)

all:	makefile $(LIB)

# "make install" puts things in the official place
install:	makefile $(LIBDIR)/$(LIB)

EXTRA_SRCS=

include $(ROOT)/mk/common.mk
