# The .cc files
SRCS= $(PL_SRCS:.pl=.cc)

# object files for all stars
OBJS= $(PL_SRCS:.pl=.o)

# header files for all stars
HDRS= $(PL_SRCS:.pl=.h)

STAR_MK=sdfdspstars
DOMAIN=SDF_DSP
DOMAIN_2=SDF
EXTRA_SRCS=$(STAR_MK).c $(PL_SRCS)

all:		$(SRCS) stars_all

install:	stars_install

