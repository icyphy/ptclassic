# root of source tree
ROOT	      = ../../../..
# VPATH points to the real source directory
VPATH         = $(ROOT)/src/octtools/vem/main

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

HDRS		= ansi.h \
		browser.h \
		cursors.h \
		defaults.h \
		errors.h \
		general.h \
		message.h \
		version.h \
		xvals.h

LIBCSRCS	= basic.c \
		browser.c \
		cursors.c \
		defaults.c \
		errors.c \
		interface.c \
		message.c \
		vem.c \
		version.c \
		xvals.c

SRCS = $(LIBCSRCS)

OBJS = $(LIBCSRCS:.c=.o)

VERSION=8-2
CFLAGS="-DCUR_DATE=\"`date`\"" -DCUR_VER=\"$(VERSION)\" -g

# pigilib/local.h includes ansi.h
header:: $(OCTTOOLS)/include/ansi.h ../include/ansi.h

$(OCTTOOLS)/include/ansi.h ../include/ansi.h: ansi.h
	rm -f $@
	cp $? $@

# common makefile file for vem binary
VEMBINCONFIG=../../vem-bin.mk
include $(VEMBINCONFIG)

# include common definitions, rules
include $(ROOT)/mk/common.mk

