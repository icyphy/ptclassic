ROOT = ../../..
VPATH = $(ROOT)/src/utils/ptplay
BINDIR = $(ROOT)/bin.$(ARCH)

# get configuration info
CONFIG=$(ROOT)/mk/config-$(ARCH).mk
include $(CONFIG)

SRCS = 	ptplay.sun4 ptplay.irix5 ptplay.hppa

all:	ptplay

ptplay: ptplay.$(ARCH) 
	@if [ $(ARCH) = "mips" ]; then \
		echo "mips architecture does not have a ptplay (yet)."; \
	else \
		echo "Copying $^ to $@"; \
		rm -f ptplay; \
		cp $^ $@; \
		chmod a+x $@; \
	fi

install:	$(BINDIR)/ptplay

ptplay.cfront ptplay.sol2: ptplay.sun4
	ln -s $^ $@ 
ptplay.irix4: ptplay.irix5
	ln -s $^ $@ 
ptplay.hppa.cfront: ptplay.hppa
	ln -s $^ $@ 
ptplay.mips:
	@echo "mips architecture does not have a ptplay (yet)."

$(BINDIR)/ptplay:	ptplay
	@if [ $(ARCH) = "mips" ]; then \
		echo "mips architecture does not have a ptplay (yet)."; \
	else \
		echo "Linking ptplay into $(BINDIR)"; \
		rm -f $(BINDIR)/ptplay; ln ptplay $(BINDIR); \
	fi

clean:
	rm -f ptplay

depend:
	echo no dependencies to make in this directory

checkjunk:

sccsinfo:
	@sccs check || true

sources: $(SRCS) 


