########################################################################
#### exists
#
# Returns true if an item is in the model, else false.
#
body ::tycho::Schedule::exists {name} {
    expr [_exists resource $name] || [_exists task $name] \
	    || [_exists dependency $name] || [_exists annotation $name]
}

