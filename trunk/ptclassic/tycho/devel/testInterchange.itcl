#### delete{}
#
catch {delete object ic}
::tycho::Inter ic -errorname Tester
ic defineType root -color red -rootonly 1
ic defineType branch -color brown -nonroot 1
ic defineType leaf -color green -nonroot 1 -leafonly 1 -valued 1
ic add root Bo {
    branch Bo
}
ic add root Peep {
    -color pink
    leaf Peep Hello -color blue
}

test Inter-delete-1 {Delete leaf} {
    set result [list [ic delete {root branch} {Bo Bo}]]
    lappend result [ic exists root Bo] [ic exists {root branch} {Bo Bo}]
} {{-color brown} 1 0}

test Inter-delete-2 {Delete root -- leaf stays} {
    set result [list [ic delete root Peep]]
    lappend result [ic exists root Peep] [ic exists {root leaf} {Peep Peep}]
} {{-color pink} 0 1}

