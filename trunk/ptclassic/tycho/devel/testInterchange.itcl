########################################################################
#### defineType{}, typecget{}, typeconfigure{}
#
catch {delete object ic}
test Inter-defineType-1 {Define a type: special option defaults} {
    ::tycho::Inter ic -errorname Tester
    ic defineType foo
    # Check default values
    set result {}
    foreach {opt val} \
            {-valued 0 -ordered 0 -leafonly 0 -strict 1 -nonroot 0 -rootonly 0} {
        lappend result [ic typecget foo $opt]
    }
    set result
} {0 0 0 1 0 0}

catch {delete object ic}
test Inter-defineType-2 {Define a type: set special options} {
    ::tycho::Inter ic -errorname Tester
    # Check by setting nonsense values
    ic defineType foo \
            -valued a -ordered b -leafonly c -strict d -nonroot e -rootonly f
    set result {}
    foreach {opt val} \
            {-valued a -ordered b -leafonly c -strict d -nonroot e -rootonly f} {
        lappend result [ic typecget foo $opt]
    }
    set result
} {a b c d e f}

catch {delete object ic}
test Inter-defineType-3 {Define a type: other options} {
    ::tycho::Inter ic -errorname Tester
    ic defineType foo -foo Foo -bar Bar
    list [ic typecget foo -foo] [ic typecget foo -bar]
} {Foo Bar}

catch {delete object ic}
test Inter-defineType-4 {Configure a type: special options} {
    ::tycho::Inter ic -errorname Tester
    ic defineType foo
    # Check by setting nonsense values
    ic typeconfigure foo \
            -valued a -ordered b -leafonly c -strict d -nonroot e -rootonly f
    set result {}
    foreach {opt val} \
            {-valued a -ordered b -leafonly c -strict d -nonroot e -rootonly f} {
        lappend result [ic typecget foo $opt]
    }
    set result
} {a b c d e f}

catch {delete object ic}
test Inter-defineType-5 {Define a type: other options} {
    ::tycho::Inter ic -errorname Tester
    ic defineType foo -foo Foo -bar Bar
    ic typeconfigure foo -foo zaz -bar baz
    list [ic typecget foo -foo] [ic typecget foo -bar]
} {zaz baz}

########################################################################
#### add{}, value{} options{}, clear{}, exists{}
#
catch {delete object ic}
::tycho::Inter ic -errorname Tester
ic defineType root -color red -rootonly 1
ic defineType branch -color brown -nonroot 1
ic defineType leaf -color green -nonroot 1 -leafonly 1 -valued 1

test Inter-add-1 {Add root items} {
    ic add root Bo
    ic add root Peep -color pink
    list \
            [ic options root Bo] [ic options root Peep] \
            [ic exists root Bo] [ic exists branch Peep] [ic exists root Sheep]
} {{-color red} {-color pink} 1 0 0}

test Inter-add-2 {Add non-root items} {
    ic add {root branch} {Bo Bo}
    ic add {root leaf} {Peep Peep} Hello -color blue
    list \
            [ic options {root branch} {Bo Bo}] \
            [ic value {root leaf} {Peep Peep}] \
            [ic options {root leaf} {Peep Peep}] \
            [ic exists {root branch} {Bo Bo}] \
            [ic exists {root leaf} {Peep Peep}] \
            [ic exists {root leaf} {Bo Bo}] \
            [ic exists {root leaf} {Bo Peep}]
		
} {{-color brown} Hello {-color blue} 1 1 0 0}

test Inter-exists-1 {Test for existence} {
    list \
            [ic exists root Bo] \
            [ic exists root Peep] \
            [ic exists branch Peep] \
            [ic exists root Sheep] \
            [ic exists {root branch} {Bo Bo}] \
            [ic exists {root leaf} {Peep Peep}] \
            [ic exists {root leaf} {Bo Bo}] \
            [ic exists {root leaf} {Bo Peep}]
    
} {1 1 0 0 1 1 0 0}

test Inter-clear-1 {Clear data} {
    ic clear
    list \
            [ic exists root Bo] \
            [ic exists root Peep] \
            [ic exists branch Peep] \
            [ic exists root Sheep] \
            [ic exists {root branch} {Bo Bo}] \
            [ic exists {root leaf} {Peep Peep}] \
            [ic exists {root leaf} {Bo Bo}] [ic exists {root leaf} {Bo Peep}]
		
} {0 0 0 0 0 0 0 0}

test Inter-add-3 {Add using nested syntax} {
    ic clear
    ic add root Bo {
        branch Bo
    }
    ic add root Peep {
        -color pink
        leaf Peep Hello -color blue
    }
    list \
            [ic options root Bo] \
            [ic options root Peep] \
            [ic options {root branch} {Bo Bo}] \
            [ic value {root leaf} {Peep Peep}] \
            [ic options {root leaf} {Peep Peep}] \
            [ic exists root Bo] \
            [ic exists root Peep] \
            [ic exists branch Peep] \
            [ic exists root Sheep] \
            [ic exists {root branch} {Bo Bo}] \
            [ic exists {root leaf} {Peep Peep}] \
            [ic exists {root leaf} {Bo Bo}] \
            [ic exists {root leaf} {Bo Peep}]

} {{-color red} {-color pink} {-color brown} Hello {-color blue} 1 1 0 0 1 1 0 0}

########################################################################
#### assign{}, value{}
#
catch {delete object ic}
::tycho::Inter ic -errorname Tester
ic defineType valued -valued 1
ic defineType nonvalued -valued 0

test Inter-assign-1 {Assign a value} {
    ic add valued Bo Hello
    set result [ic value valued Bo]
    ic assign valued Bo Goodbye
    lappend result [ic value valued Bo] 
    set result
} {Hello Goodbye}

