catch {delete object ic}
::tycho::Inter ic -errorname Tester
ic defineType root -color red -rootonly 1
ic defineType branch -color brown -nonroot 1
ic defineType leaf -color green -nonroot 1 -leafonly 1 -valued 1
ic add root Bo {
    branch Bo -color green
}
ic add root Peep {
    -color pink
    leaf Peep Hello -color blue
}
ic add root Sheep -color pink

test Inter-describeitem-1 {Describe non-valued root} {
    ic describeItem root Sheep
} "root Sheep -color pink\n"

test Inter-describeitem-2 {Describe non-valued nested item} {
    ic describeItem {root branch} {Bo Bo}
} "branch Bo -color green\n"

test Inter-describeitem-3 {Describe valued item} {
    ic describeItem {root leaf} {Peep Peep}
} "leaf Peep Hello -color blue\n"

test Inter-describeitem-4 {Describe nested item} {
    ic describeItem root Peep
} "root Peep \{\n\ \ \ \ -color pink\n\ \ \ \ leaf Peep Hello -color blue\n\}\n"

test Inter-describeitem-5 {Describe nested item with string prefix} {
    ic describeItem root Peep {!}
} "!root Peep \{\n!\ \ \ \ -color pink\n!\ \ \ \ leaf Peep Hello -color blue\n!\}\n"

test Inter-describe-5 {Describe whole model} {
    llength [ic describe]
} [llength {
root Bo {
    branch Bo -color green
}
root Peep {
    -color pink
    leaf Peep Hello -color blue
}
root Sheep -color pink
}]

