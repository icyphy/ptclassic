if {[string compare test [info procs test]] == 1} then { 
    source [file join $TYCHO kernel test testDefs.tcl]
} {}

# Create the graph used for testing
catch {delete object digraph}
set digraph [::tycho::Digraph [::tycho::autoName digraph]]
digraph configureEntityType vertex -label ""
digraph configureLinkType edge -weight 0
digraph read string {
    vertex a -label "First vertex"
    vertex b -label "Second vertex"
    vertex c
    edge a b
    edge b c
    edge a c -weight 3
}

test Digraph-1.1 {Get vertices} {
    digraph vertices
} {a b c}

test Digraph-1.2 {Get edges} {
    digraph vertices
} {a b a c b c}

test Digraph-1.3 {Delete single vertex, test return value} {
    digraph vertexdelete a
} {vertex a -description {} -label {First vertex}}

test Digraph-1.4 {Add a single vertex, test return value} {
    digraph vertex a -label {First vertex}
} {vertexdelete a}

test Digraph-1.5 {Test default attribute of vertex} {
    digraph vertexcget a -label
} {}

test Digraph-1.6 {Test configuring attribute of vertex} {
    digraph vertexconfigure a -label {This label}
    digraph vertexcget a -label
} {This label}

