    set SHORTTIME 50
}
#set VERBOSE 1


#######################################################################
#### Define a proc to create a simple line
proc _line {} {
    global l
    _clean
    set l [.s create line 50 50 150 50 150 150 50 150 \
	    -arrow last -width 2 \
	    -tags foo]
}

