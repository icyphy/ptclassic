#######################################################################
#### EditHTML
# This class defines a window containing an EditHTMLText widget, which
# provides an emacs-like editor specialized for editing HTML files.
#
class ::tycho::EditHTML {
    inherit ::tycho::Edit

    # Evaluate the HTML.
    method evaluate {}

    # Open a help window.
    method help {}

    constructor {args} {}
    destructor {}

    ###############################################################
    ####                  protected methods                    ####

    # Return the name of the type of text widget to use (EditHTMLText).
    protected method textWidget {} {return ::tycho::EditHTMLText}
}

###################################################################
#
body ::tycho::EditHTML::constructor {args} {
    
    eval itk_initialize $args

    # Add to the format menu commands to comment and uncomment
    # the regions defined by the selection.
    addMenuSeparator Format
        
    addMenuItem "Recolorize" Format -underline 0 \
	    -command "$this component text parseRegion 1.0 end"

    addMenuSeparator Edit
        
    addMenuItem "Check Links" Edit -underline 6 \
	    -command "$this component text busy checkLinks"
}

#####################################################################
#### evaluate
# Evaluate the contents of the text window as HTML commands.
#
body ::tycho::EditHTML::evaluate {} {
    $itk_component(text) evaluate
}

###################################################################
#### help
# Open a window with help on the current widget.
#
body ::tycho::EditHTML::help {} {
    global ::TYCHO
    ::tycho::File::openContext \
	    $TYCHO/editors/textedit/doc/usersGuides/EditHTMLHelp.html
}
