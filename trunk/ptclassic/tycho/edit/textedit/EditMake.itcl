#######################################################################
#### EditMake
# This class defines a window that provides an emacs-like editor
# specialized for editing Make files. It colorizes the code, identifying
# comments, and fills blocks of comments.
#
class ::tycho::EditMake {
    inherit ::tycho::EditProgram

    constructor {args} {}
    destructor {}

    #### help
    # Open a help window.
    method help {}

    ###################################################################
    ####                  protected methods                        ####

    #### textWidget
    # Return the name of the type of text widget to use.
    method textWidget {} {return ::tycho::EditMakeText}
}

###################################################################
#
body ::tycho::EditMake::constructor {args} {
    
    eval itk_initialize $args

    # Read contents from the specified file, unless the name is "NoName".
    # This needs to be repeated from the baseclass because the -file
    # option will not have been processed by the time the base class
    # constructor is executed.
    if {$file != {NoName}} {
	$itk_component(text) initFile $file
	markUnmodified
    }
}

###################################################################
#### help
# Open a window with help on the current widget.
#
body ::tycho::EditMake::help {} {
    global ::TYCHO
    ::tycho::File::openContext \
	    $TYCHO/editors/textedit/doc/usersGuides/EditMakeHelp.html
}
