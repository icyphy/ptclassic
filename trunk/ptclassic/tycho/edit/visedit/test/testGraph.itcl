# If necessary load up the class definitions
if {[namespace tycho {info classes Graph}] == {} } {
    namespace tycho
    source ../Graph.itcl
}

# 
test Graph-1.1 {The graph below has a cycle in it} {
    catch {delete object foo}
    ::tycho::Graph foo
    foo add c {} a
    foo add d {} a
    foo add y {} a
    foo add e {} y
    foo add f {} e
    foo add a {}
    foo addArc e a
    foo verifyAll
    foo rename a x
    foo delete y
    set descr [foo describe]
    foo clear
    foo init $descr
    foo deleteArc e f
    foo describe
} {{d {} x} {x {} e} {e {} x} {f {} {}} {c {} x}}
