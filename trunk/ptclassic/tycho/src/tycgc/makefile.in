# This makefile is an autoconf makefile, not a standard Ptolemy makefile

# This file is a makefile for the Ptk package.
# If it has the name "makefile.in"
# then it is a template for a makefile;  to generate the actual makefile,
# run "./configure", which is a configuration script generated by the
# "autoconf" program (constructs like "@foo@" will get replaced in the
# actual makefile.

srcdir =	@srcdir@
VPATH =		$(srcdir)

ROOT =	$(srcdir)/../..

# Get configuration info
CONFIG =	$(ROOT)/mk/tycho.mk
include $(CONFIG)

OTHERCFLAGS = 

# makefile stubs that include architecture dependencies.
# 'configure' creates these in the directory above.
include ../tcl.mk

LIB =		libtycgc$(TCL_SHLIB_SUFFIX)

INCLUDE = \
	-I./ \
	-I$(srcdir) \
	$(TCL_INCLUDES)

SRCS = 		tycgc.c
HDRS =		tycgc.h

EXTRA_SRCS =	makefile.in tclif.c test.tcl

OBJS =		tycgc.o

# `make realclean` removes these files
REALCLEAN_STUFF = makefile

LIBPATH = \
	-L$(TCL_LIB_DIR) \
	-L$(TK_LIB_DIR)

all: $(LIB) $(MISC_SRCS) 

install: $(LIBDIR)/$(LIB)

$(LIB) : $(OBJS)
	$(TCL_SHLIB_LD) $(OBJS) -o $@ $(TCL_LD_SEARCH_FLAGS) $(LIBS)

depend:
	@echo "no dependencies in this directory"

# Get the rest of the rules
include $(ROOT)/mk/tycommon.mk

makefile: $(srcdir)/makefile.in
	(cd ../..; ./config.status)
